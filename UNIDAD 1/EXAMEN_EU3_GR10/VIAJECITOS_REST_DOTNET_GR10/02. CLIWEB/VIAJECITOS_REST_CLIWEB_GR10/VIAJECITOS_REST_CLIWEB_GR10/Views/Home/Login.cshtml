@model VIAJECITOS_REST_CLIWEB_GR10.Controllers.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="form-container">
    <h2>Iniciar Sesión</h2>
    @if (ViewBag.Error != null)
    {
        <div class="error">@ViewBag.Error</div>
    }
    <form asp-action="Login" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="NombreUsuario">Usuario</label>
            <input asp-for="NombreUsuario" class="form-control" required />
            <div class="invalid-feedback">El usuario es requerido.</div>
        </div>
        <div class="form-group">
            <label asp-for="ClaveUsuario">Contraseña</label>
            <input type="password" asp-for="ClaveUsuario" class="form-control" required />
            <div class="invalid-feedback">La contraseña es requerida.</div>
        </div>
        <button type="submit">Iniciar Sesión</button>
    </form>
    <div class="nav-links">
        <a href="@Url.Action("Index", "Home")">Volver</a>
    </div>
</div>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>