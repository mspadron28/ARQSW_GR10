@model List<VIAJECITOS_REST_CLIWEB_GR10.Models.Compra>
@{
    ViewData["Title"] = "Mis Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="table-container">
    <h2>Mis Compras</h2>
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <p class="error">@ViewBag.Error</p>
    }
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <tr>
                <th>ID Compra</th>
                <th>Vuelo</th>
                <th>Valor</th>
                <th>Fecha Compra</th>
                <th>Hora Salida</th>
            </tr>
            @foreach (var compra in Model)
            {
                <tr>
                    <td>@compra.IdCompra</td>
                    <td>@compra.Vuelo.CiudadOrigen a @compra.Vuelo.CiudadDestino</td>
                    <td>$@compra.Vuelo.Valor.ToString("F2")</td>
                    <td>@compra.FechaCompra</td>
                    <td>@compra.Vuelo.HoraSalida.ToString("HH:mm")</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No tienes compras registradas.</p>
    }
    <div class="nav-links">
        <a href="@Url.Action("Index", "Home")">Volver al Inicio</a>
    </div>
</div>