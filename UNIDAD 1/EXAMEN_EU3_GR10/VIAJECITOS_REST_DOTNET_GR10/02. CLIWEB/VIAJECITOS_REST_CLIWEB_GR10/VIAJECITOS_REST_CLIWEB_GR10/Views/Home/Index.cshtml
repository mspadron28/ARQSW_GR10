@model string
@{
    ViewData["Title"] = "Inicio";
}

<div class="result-container">
    <h2>Bienvenido a Viajecitos SA</h2>
    <p>Encuentra y compra tus boletos de avión de forma fácil y segura.</p>
    @if (ViewBag.Error != null)
    {
        <div class="error">@ViewBag.Error</div>
    }
    @if (!string.IsNullOrEmpty(@Context.Session.GetString("NombreUsuario")))
    {
        <p>Hola, @Context.Session.GetString("NombreUsuario")!</p>
        <div class="nav-links">
            <a href="@Url.Action("BuscarVuelos", "Home")">Buscar Vuelos</a>
            <a href="@Url.Action("SeleccionarClienteFacturas", "Home")">Facturas de un Cliente</a>
            <a href="@Url.Action("TodasFacturas", "Home")">Todas las Facturas</a>
            <a href="@Url.Action("Logout", "Home")">Cerrar Sesión</a>
        </div>
    }
    else
    {
        <div class="nav-links">
            <a href="@Url.Action("Login", "Home")">Iniciar Sesión</a>
        </div>
    }
</div>