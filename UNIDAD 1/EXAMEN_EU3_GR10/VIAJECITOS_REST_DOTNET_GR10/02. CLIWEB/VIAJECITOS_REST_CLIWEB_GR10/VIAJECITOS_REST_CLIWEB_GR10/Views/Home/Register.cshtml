@model VIAJECITOS_REST_CLIWEB_GR10.Controllers.RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="form-container">
    <h2>Registrar Cliente</h2>
    @if (ViewBag.Error != null)
    {
        <div class="error">@ViewBag.Error</div>
    }
    <form asp-action="Register" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Nombre">Nombre</label>
            <input asp-for="Nombre" class="form-control" required />
            <div class="invalid-feedback">El nombre es requerido.</div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control" required />
            <div class="invalid-feedback">El email es requerido y debe ser válido.</div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentoIdentidad">Documento de Identidad</label>
            <input asp-for="DocumentoIdentidad" class="form-control" required />
            <div class="invalid-feedback">El documento es requerido.</div>
        </div>
        <button type="submit">Registrarse</button>
    </form>
    <div class="nav-links">
        <a href="@Url.Action("Login", "Home")">Iniciar Sesión</a>
        <a href="@Url.Action("Index", "Home")">Volver</a>
    </div>
</div>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>