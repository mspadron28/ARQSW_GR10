@model VIAJECITOS_REST_CLIWEB_GR10.Controllers.BuscarVuelosModel
@{
    ViewData["Title"] = "Buscar Vuelos";
}

<div class="search-container">
    <h2>Buscar Vuelos</h2>
    @if (ViewBag.Error != null)
    {
        <div class="error-message">@ViewBag.Error</div>
    }
    <form asp-action="BuscarVuelos" method="post" class="needs-validation search-form" novalidate>
        <div class="form-row-wrapper">
            <div class="form-row">
                <div class="form-group">
                    <label for="CiudadOrigen">Origen</label>
                    <input asp-for="CiudadOrigen" class="form-control" id="CiudadOrigen" placeholder="Ej. Quito" required />
                    <div class="invalid-feedback">La ciudad de origen es requerida.</div>
                </div>
                <span class="hyphen">-</span>
                <div class="form-group">
                    <label for="CiudadDestino">Destino</label>
                    <input asp-for="CiudadDestino" class="form-control" id="CiudadDestino" placeholder="Ej. Guayaquil" required />
                    <div class="invalid-feedback">La ciudad de destino es requerida.</div>
                </div>
            </div>
        </div>
        <div class="form-group date-group">
            <label for="Fecha">Fecha</label>
            <input type="date" asp-for="Fecha" class="form-control" id="Fecha" required />
            <div class="invalid-feedback">La fecha es requerida y debe ser válida.</div>
        </div>
        <button type="submit" class="search-button">
            <span>Buscar</span>
          
        </button>
    </form>
    <div class="nav-links">
        <a href="@Url.Action("Index", "Home")">Volver</a>
    </div>
</div>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

<style>
