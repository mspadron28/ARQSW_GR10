        }

      

    .error-message {
        font-size: 0.75rem;
        color: var(--error-color);
        background: #fef2f2;
        padding: 0.4rem 0.8rem;
        border-radius: 5px;
        margin-bottom: 0.75rem;
        text-align: center;
    }

    .nav-links {
        margin-top: 0.75rem;
        text-align: center;
    }

        .nav-links a {
            font-size: 1rem;

            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.2s;
        }

