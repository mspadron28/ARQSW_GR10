<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EurekaBank Cliente"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        android:background="@color/header_background"
        android:padding="16dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnConsulta"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Consulta de Movimientos"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/button_background"
            android:textColor="@color/text_white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnDeposito"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Registrar DepÃ³sito"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/button_background"
            android:textColor="@color/text_white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnRetiro"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Registrar Retiro"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/button_background"
            android:textColor="@color/text_white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnTransferencia"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Realizar Transferencia"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/button_background"
            android:textColor="@color/text_white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnVerificarSaldo"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Verificar Saldo"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@color/button_background"
            android:textColor="@color/text_white"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>